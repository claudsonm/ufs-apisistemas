{
    "name": "claudsonm/ufs-apisistemas",
    "description": "Um simples pacote para consumir os servi√ßos da APISistemas da UFS.",
    "homepage": "https://github.com/claudsonm/ufs-apisistemas",
    "license": "MIT",
    "authors": [
        {
            "name": "Claudson Martins",
            "email": "claudson@outlook.com",
            "homepage": "https://claudsonmartins.com/"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^6.3",
        "ext-json": "*"
    },
    "require-dev": {
        "vlucas/phpdotenv": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "UFS\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": [
            "tests/helpers.php"
        ]
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
